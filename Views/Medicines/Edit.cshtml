@using ClinicManagement.Menu
@inject AdminSidebarService _AdminSidebarService
@model ClinicManagement.Models.Medicines

@{
    ViewData["Title"] = "Chỉnh sửa Thuốc";
}

<partial name="_StatusMessage" />



<div class="card-header bg-success text-uppercase text-white text-center mb-2 pb-4" style="height: 25px;">
    <h6>@ViewData["Title"]</h6>
</div>

<form asp-action="Edit">
    <div class="row col-12">         
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="DateCreate" />
        <input type="hidden" asp-for="UserID" />
        <div class="form-group col-2">
                <label asp-for="Name" class="control-label"></label>                
            </div>
            <div class="form-group col-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-2"></div>
            <div class="form-group col-2">
                <label asp-for="CategoryId" class="control-label"></label>
            </div>
             <div class="form-group col-3">
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group col-2">
                <label asp-for="UnitID" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="UnitID" class ="form-control" asp-items="ViewBag.UnitID"></select>
            </div>
            <div class="form-group col-2"></div>
            <div class="form-group col-2">
                <label asp-for="ManufactureId" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="ManufactureId" class ="form-control" asp-items="ViewBag.ManufactureID"></select>
            </div>
            <div class="form-group col-2">
                <label asp-for="UnitPrice" class="control-label"></label>
            </div>
                <div class="form-group col-3">
                @* <input asp-for="UnitPrice" class="form-control" /> *@
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="UnitPrice" asp-format="{0:N0}" class="form-control">
                    <span class="input-group-text">.00</span>
                    </div>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="SellPrice" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                @* <input asp-for="SellPrice" class="form-control" /> *@
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="SellPrice" class="form-control" asp-format="{0:N0}" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                    </div>
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>

            <div class="form-group col-2">
                <label asp-for="Quantity" class="control-label"></label>
            </div>
             <div class="form-group col-3">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group col-2"></div>
             <div class="form-group col-2">
                <label asp-for="ExpiryDate" class="control-label"></label>
            </div>
             <div class="form-group col-3">
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
             <div class="form-group col-10">
                <textarea rows="3" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

             <div class="form-group btn-group col-12">
                <div class="col-1"></div>
                <div class="col-5">
                <input type="submit" value="Cập nhật" class="btn btn-primary btn-block" />
                </div>
                <div class="col-5">
                 <a class="btn btn-secondary btn-block" asp-action="index"
                   asp-route-pg="@TempData.Peek("CurrentPage")">danh sách thuốc</a>
                </div>
            </div>
           
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}

