@using ClinicManagement.Menu
@inject AdminSidebarService _AdminSidebarService
@model ClinicManagement.Models.Medicines

@{
    ViewData["Title"] = "Thêm mới thuốc";

}
<partial name="_StatusMessage" />

@* <h1>Create</h1>

<h4>Medicines</h4>
<hr /> *@
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="5" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnitID" class="control-label"></label>
                <select asp-for="UnitID" class ="form-control" asp-items="ViewBag.UnitID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ManufactureId" class="control-label"></label>
                <select asp-for="ManufactureId" class ="form-control" asp-items="ViewBag.ManufactureID"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellPrice" class="control-label"></label>
                <input asp-for="SellPrice" class="form-control" />
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldUnitPrice" class="control-label"></label>
                <input asp-for="OldUnitPrice" class="form-control" />
                <span asp-validation-for="OldUnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldSellPrice" class="control-label"></label>
                <input asp-for="OldSellPrice" class="form-control" />
                <span asp-validation-for="OldSellPrice" class="text-danger"></span>
            </div>       
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a class="btn btn-secondary" asp-action="index"
                   asp-route-pg="@TempData.Peek("CurrentPage")">danh sách thuốc</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}
